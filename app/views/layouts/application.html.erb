<!DOCTYPE html>
<html>
  <head>
    <title>NoticeBoard</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav>
      <ul>
        <%if user_logged? %>
<li><%= button_to 'logout', logout_user_path, method: :delete %></li>
<%else%>
<li><%= link_to 'login', login_user_path %></li>
        <%end%>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
